{
  "compilerOptions": {
    "outDir": "lib",
    "jsx": "react",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "lib": ["es6", "dom"],
    "skipLibCheck": true,
    "module": "commonjs",
    "declaration": true
  },
  "exclude": ["node_modules", "lib-esm", "lib", "**/*.spec.ts"]
}
